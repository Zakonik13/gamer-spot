
{{> nav}}

<div class="container">

  {{#each product}}
  {{#if (is_equal category_id 3)}}
  <div class="notification is-secondary"  class="columns">

    <div class="notification is-secondary" id="name" class="box">
        {{product_name}} - ${{price}} 
    </div>

    <div class="column">
        <img class="image pb-4" id="game-pic" src="">
      
  
      <div class="columns is-mobile">
        <div class="column">
          <img class="image" id="secondary-pic" src="">
        </div>
        <div class="column">
          <div class="content is-size-7 is-family-sans-serif has-text-weight-bold" id="description"></div>
        </div>
      </div>


      <div class="notification is-secondary" class="box">
        <button class="button2">Add to Cart</button>
      </div>

    </div>
  </div>
  {{/if}}
  {{/each}}




<script src="/javascript/api.js"></script>

{{> footer}}
